<h1>Mooden</h1>

<nav>
  <div class="nav nav-tabs" id="nav-tab" role="tablist">
    <a class="nav-link active" id="nav-user-tab" data-bs-toggle="tab" href="#nav-user" role="tab"
      aria-controls="nav-user" aria-selected="true">User</a>
    <a class="nav-link" id="nav-developer-tab" data-bs-toggle="tab" href="#nav-developer" role="tab"
      aria-controls="nav-developer" aria-selected="false">Developer</a>
  </div>
</nav>
<div class="tab-content" id="nav-tabContent">
  <div class="tab-pane fade show active" id="nav-user" role="tabpanel" aria-labelledby="nav-user-tab">
    Controls:
    <button class="btn btn-primary btn-lg" data-bs-toggle="modal" data-bs-target="#modal-add-entry">
      Add entry
    </button>
    <button id="btn-logout" class="btn btn-danger btn-lg">Log out</button>
  </div>
  <div class="tab-pane fade" id="nav-developer" role="tabpanel" aria-labelledby="nav-developer-tab">
    <button class="btn btn-secondary btn-lg" data-bs-toggle="modal" data-bs-target="#modal-add-sample">
      Add sample data
    </button>
    <button id="btn-refresh" class="btn btn-info btn-lg">Refresh</button>
    <button id="btn-delete-data" class="btn btn-danger btn-lg">
      Delete data
    </button>
    <button id="btn-refresh-token" class="btn btn-warning btn-lg">
      New refresh token
    </button>
  </div>
</div>

<!-- Chart -->
<div class="chart-container mt-5">
  <canvas id="moodChart"></canvas>
</div>

<!-- Modal -->
<div id="modal-add-entry" class="modal fade" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title"><strong>Add a New Entry</strong></h5>
        <button type="button" class="close" data-bs-dismiss="modal">
          &times;
        </button>
      </div>
      <div class="modal-body">
        <form id="form-add-entry">
          <div class="form-group row">
            <label for="input-date" class="col-sm-3 col-form-label">Entry Date</label>
            <div class="col-sm-9">
              <input type="date" class="form-control" id="input-date" required />
            </div>
          </div>
          <div class="form-group row">
            <label for="input-mood" class="col-sm-3 col-form-label">Mood (1-9)</label>
            <div class="col-sm-9">
              <input type="number" min="1" max="9" class="form-control" id="input-mood"
                placeholder="1=very sad, 9=very happy" value="5" required />
            </div>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="submit" class="btn btn-primary" id="btn-new-entry">
          Submit
        </button>
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
          Close
        </button>
      </div>
    </div>
  </div>
</div>

<!-- Modal -->
<div id="modal-add-sample" class="modal fade" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title"><strong>Add Sample Data</strong></h5>
        <button type="button" class="close" data-bs-dismiss="modal">
          &times;
        </button>
      </div>
      <div class="modal-body">
        <form id="form-add-sample-data">
          <div class="form-group row">
            <label for="input-sample-start-date" class="col-sm-3 col-form-label">Start Date</label>
            <div class="col-sm-9">
              <input type="date" class="form-control" id="input-sample-start-date" required />
            </div>
          </div>
          <div class="form-group row">
            <label for="input-sample-end-date" class="col-sm-3 col-form-label">End Date</label>
            <div class="col-sm-9">
              <input type="date" class="form-control" id="input-sample-end-date" required />
            </div>
            <div class="form-text">
              Start Date must be prior to End Date. A maximum of 15 days of data from the start date will be generated.
            </div>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="submit" class="btn btn-primary" id="btn-add-sample-data">
          Submit
        </button>
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
          Close
        </button>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript" src="/js/dashboard.js"></script>